# ========================================
# CONFIGURACIÓN BACKEND - Calendario Inteligente
# ========================================

# Copiar este archivo a .env y completar con valores reales

# ========================================
# DATABASE
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=tu_password_aqui
DB_DATABASE=calendario_inteligente

# ========================================
# REDIS (Cache)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# JWT
# ========================================
JWT_SECRET=tu_secreto_jwt_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRATION=7d

# ========================================
# SERVER
# ========================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000

# ========================================
# GOOGLE CALENDAR API
# ========================================
GOOGLE_CLIENT_ID=tu_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ========================================
# MICROSOFT GRAPH API (Outlook)
# ========================================
MICROSOFT_CLIENT_ID=tu_microsoft_client_id
MICROSOFT_CLIENT_SECRET=tu_microsoft_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/auth/microsoft/callback

# ========================================
# GOOGLE MAPS PLATFORM (NUEVO)
# ========================================
# API Key para el servidor (backend)
# ⚠️  IMPORTANTE: Restringir por IP y por APIs:
#    - Routes API
#    - Distance Matrix API
#    - Places API (New)
GMAPS_SERVER_KEY=tu_server_api_key_aqui

# API Key para el frontend (browser)
# ⚠️  IMPORTANTE: Restringir por HTTP referrer
#    Solo para Maps JavaScript API
GMAPS_FRONTEND_KEY=tu_frontend_api_key_aqui

# Configuración antigua (mantener por compatibilidad)
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key

# ========================================
# ENCRYPTION
# ========================================
# Para cifrar tokens OAuth en base de datos
ENCRYPTION_KEY=tu_encryption_key_32_caracteres_min

# ========================================
# WEBHOOKS
# ========================================
WEBHOOK_SECRET=tu_webhook_secret_para_validar

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ========================================
# CORS
# ========================================
CORS_ORIGINS=http://localhost:8000,http://localhost:3001

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug

